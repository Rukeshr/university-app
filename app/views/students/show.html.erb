<div class="row">
    <div class="col s6 m6">
      <div class="card brown lighten-4 darken-1">
        <div class="card-content white-text">
          <span class="card-title"> Name : <%= @student.name %></span>
          <p> Email  : <%= @student.email %></p>
          <p>Courses enrollments :
          <% if @student.courses.empty? %>
          
          <% else %>
            <ul>
            <% @student.courses.each do |course|%>
             <li><%= course.name %></li>
             <li><%= course.description %></li>  
            <% end %>
            </ul>
          <% end %>
          </p>
        </div>
      </div>
      <% if current_user == @student%>
         <%= link_to "Edit your profile", edit_student_path(@student), class:"waves-effect waves-light btn"%>
      <% end %>
      </div>
</div>