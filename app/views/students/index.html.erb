<div class="row">
    <div class="col s12">
        <h3 class="center-align">Students directory</h3>
    </div>
</div>

<div class="row">
    <% @students.each do |student|%>
    <div class="col s6 m6">
      <div class="card brown lighten-4 darken-1">
        <div class="card-content white-text">
          <span class="card-title"> Name : <%= student.name %></span>
          <p> Email  : <%= student.email %></p>
          <p>Courses enrollments</p>
        </div>
        <div class="card-action">
          <a href="#">View profile</a>  
        </div>
      </div>
    </div>
    <% end %>
</div>

